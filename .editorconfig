# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[**.{json,css,scss}]
indent_style = space
indent_size = 4

[**.html, **.cshtml]
indent_style = space
indent_size = 4

[*.js]
indent_style = space
indent_size = 4

# Matches the exact files either package.json or .travis.yml
[{package.json,.travis.yml}]
indent_style = space
indent_size = 2